<% posts.each do |post| %>
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h2><%= post.title %></h2>
                <span class= "badge">
                <%= link_to post.category.name, category_search_posts_path(post.category.name) %>
                </span>
            </div>    
            <div>
                <%= post.body %>
            </div>
        </div> 
        <div class = "card-footer">
        <span>Published <%= time_ago_in_words(post.created_at) %> ago</span>
        <span> by <%= post.user.email %></span>
            <%= link_to 'Read more...', post_read_path(post)%>
            <div class="d-flex justify-content-start">
                <% post.tags.each do |tag| %>
                    <span class= "badge badge-warning mr-2">
                        <%= link_to tag.name, tag_search_path(tag.name) %>
                    </span>
                <% end %>
            </div>
        </div>
    </div> 
<% end %>
